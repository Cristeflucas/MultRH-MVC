@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<MultRH_MVC.Models.ImageModel>
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div id="imageCarousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Count(); i++)
        {
            var image = Model.ElementAt(i);
            <div class="carousel-item @(i == 0 ? " active" : "")">
                <img class="d-block w-100" src="@Url.Content(image.ImageUrl)" alt="Slide @(i + 1)">
                <div class="carousel-caption d-none d-md-block p-0" style="width: 485px; height: 500px;">
                    <h1 style="width: 350px; height:100px; text-align:left; font-size:40px;font-family: 'Open Sans'; font-weight:800; letter-spacing:-0.8px; line-height:50px; text-transform:uppercase;">@image.Caption</h1>
                    <p style="text-align:left; font-size:20px;  ">@image.Description</p>
                    <a href="https://api.whatsapp.com/send/?phone=558488184914&text&type=phone_number&app_absent=0" style="width:150px; justify-content:center; display: flex; background-color: white; padding:16px; border-radius:4px; text-decoration:none; color: black;">Cadastra-se</a>
                </div>

            </div>
        }
        <a class="carousel-control-prev" href="#imageCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only"></span>
        </a>
        <a class="carousel-control-next" href="#imageCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only"></span>
        </a>
    </div>
